10 REM SAMPLE C64 BASIC PROGRAM
20 REM DEMONSTRATES VARIOUS FEATURES
30 PRINT "WELCOME TO C64 BASIC!"
40 PRINT
50 PRINT "THIS PROGRAM DEMONSTRATES:"
60 PRINT "- VARIABLES AND CALCULATIONS"
70 PRINT "- LOOPS AND CONDITIONALS"
80 PRINT "- STRING MANIPULATION"
90 PRINT "- SUBROUTINES"
100 PRINT
110 REM VARIABLE ASSIGNMENTS
120 A = 10
130 B = 5
140 C$ = "HELLO"
150 D$ = "WORLD"
160 PRINT "NUMERIC VARIABLES: A="; A; " B="; B
170 PRINT "STRING VARIABLES: C$="; C$; " D$="; D$
180 PRINT
190 REM CALCULATIONS
200 PRINT "CALCULATIONS:"
210 PRINT "A + B = "; A + B
220 PRINT "A - B = "; A - B
230 PRINT "A * B = "; A * B
240 PRINT "A / B = "; A / B
250 PRINT "A ^ 2 = "; A * A
260 PRINT
270 REM STRING CONCATENATION
280 PRINT "STRING CONCATENATION:"
290 PRINT C$ + " " + D$
300 PRINT "LENGTH OF C$: "; LEN(C$)
310 PRINT "ASCII CODE OF 'H': "; ASC("H")
320 PRINT
330 REM FOR LOOP
340 PRINT "COUNTING FROM 1 TO 5:"
350 FOR I = 1 TO 5
360 PRINT I;
370 NEXT I
380 PRINT
390 PRINT
400 REM COUNTDOWN LOOP
410 PRINT "COUNTDOWN:"
420 FOR J = 5 TO 1 STEP -1
430 PRINT J;
440 NEXT J
450 PRINT " BLAST OFF!"
460 PRINT
470 REM IF-THEN STATEMENTS
480 PRINT "CONDITIONAL LOGIC:"
490 IF A > B THEN PRINT "A IS GREATER THAN B"
500 IF A = 10 THEN PRINT "A EQUALS 10"
510 IF A <> B THEN PRINT "A IS NOT EQUAL TO B"
520 PRINT
530 REM SUBROUTINE CALL
540 PRINT "CALLING SUBROUTINE:"
550 GOSUB 1000
560 PRINT "BACK TO MAIN PROGRAM"
570 PRINT
580 REM RANDOM NUMBERS
590 PRINT "RANDOM NUMBERS:"
600 FOR K = 1 TO 3
610 PRINT INT(RND(1) * 100) + 1;
620 NEXT K
630 PRINT
640 PRINT
650 REM MATHEMATICAL FUNCTIONS
660 PRINT "MATHEMATICAL FUNCTIONS:"
670 X = 16
680 PRINT "SQUARE ROOT OF "; X; " = "; SQR(X)
690 Y = -5
700 PRINT "ABSOLUTE VALUE OF "; Y; " = "; ABS(Y)
710 Z = 3.7
720 PRINT "INTEGER PART OF "; Z; " = "; INT(Z)
730 PRINT
740 REM END OF PROGRAM
750 PRINT "PROGRAM COMPLETE!"
760 END
